inteiro a, b, c, valor, soma, mult

   escreva("Digite o Valor de A: ")
   leia(a)
   escreva("Digite o Valor de B: ")
   leia(b)

   soma = a + b
   mult = a * b

   se (a == b){
    (soma)
    escreva("\nSendo A = B, o valor da variável C é: ", soma)
   }
   se (a != b){
    (mult)
    escreva("\nSendo A != B, o valor da variável C é: ", mult)
   }
